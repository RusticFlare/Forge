anvil = Hash.new

define :forge do |hash|
  hash.each do |key,val|
    anvil[key] = string_eval(val,[])
  end
  play_loops anvil
end

# sample :

with_fx :reverb do
  with_fx :distortion, distort: 0.6 do
    with_fx :flanger do
      forge({ :the_axe => "loop_industrial",
              :the_noise => "forge_f1_pc" })
    end
  end
end